<% content_for(:title, 'Section') %>

<h1 class="text-3xl">Section <span class="font-semibold"><%= @section.title %></span></h1>

<div class="flex flex-col my-6"><%= @section.content %></div>

<div class="flex flex-row text-gray-700">
  <%= link_to 'Back', dashboard_sections_path, class: 'underline mr-2' %>
  <%= link_to 'Edit', edit_dashboard_section_path(@section), class: 'underline mr-2' %>
  <%= link_to 'Delete', dashboard_section_path(@section), method: :delete, data: { confirm: 'Are you sure?' }, class: 'underline' %>
</div>
