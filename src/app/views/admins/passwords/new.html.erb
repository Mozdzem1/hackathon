<% content_for(:title, 'Forgot Your Password?') %>

<h1 class="text-3xl mb-3">Forgot Your Password?</h1>

<div class="bg-white p-10 rounded shadow">
  <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
    <%= render 'devise/shared/error_messages', resource: resource %>

    <div class="flex flex-col mb-4">
      <%= f.label :email %>
      <%= f.email_field :email, autofocus: true, autocomplete: 'email', class: 'w-full px-3 py-1 border-gray-300 border-2 rounded focus:outline-none focus:border-blue-300' %>
    </div>

    <div class="flex flex-col items-center">
      <%= f.submit 'Send me reset password instructions', class: 'bg-blue-500 hover:bg-blue-600 cursor-pointer text-white font-bold px-4 py-2 rounded' %>
    </div>
  <% end %>

  <div class="flex flex-col text-gray-700 text-center mt-2">
    <%= render "admins/shared/links" %>
  </div>
</div>
