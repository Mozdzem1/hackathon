<% content_for(:title, 'Change Your Password') %>

<h1 class="text-3xl mb-3">Change Your Password</h1>

<div class="bg-white p-10 rounded shadow">
  <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }) do |f| %>
    <%= render 'devise/shared/error_messages', resource: resource %>
    <%= f.hidden_field :reset_password_token %>

    <div class="flex flex-col mb-4">
      <%= f.label :password, 'New password' %>
      <% if @minimum_password_length %>
        <em>(<%= @minimum_password_length %> characters minimum)</em><br />
      <% end %>
      <%= f.password_field :password, autofocus: true, autocomplete: 'new-password', class: 'w-full px-3 py-1 border-gray-300 border-2 rounded focus:outline-none focus:border-blue-300' %>
    </div>

    <div class="flex flex-col mb-4">
      <%= f.label :password_confirmation, 'Confirm new password' %>
      <%= f.password_field :password_confirmation, autocomplete: 'new-password', class: 'w-full px-3 py-1 border-gray-300 border-2 rounded focus:outline-none focus:border-blue-300' %>
    </div>

    <div class="flex flex-col items-center">
      <%= f.submit 'Change my password', class: 'bg-blue-500 hover:bg-blue-600 cursor-pointer text-white font-bold px-4 py-2 rounded' %>
    </div>
  <% end %>

  <div class="flex flex-col text-gray-700 text-center mt-2">
    <%= render "admins/shared/links" %>
  </div>
</div>
