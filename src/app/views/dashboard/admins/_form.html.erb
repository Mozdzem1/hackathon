<%= form_with(model: [:dashboard, @admin], local: true, class: 'mt-2') do |f| %>
  <%= render partial: 'dashboard/errors', locals: { model: @admin } %>

  <div class="flex flex-col mb-4">
    <%= f.label :email %>
    <%= f.email_field :email, class: 'w-full px-3 py-1 border-gray-300 border-2 rounded focus:outline-none focus:border-blue-300' %>
  </div>

  <div class="flex flex-col items-center">
    <%= f.submit 'Invite', class: 'bg-blue-500 hover:bg-blue-600 cursor-pointer text-white font-bold px-4 py-2 rounded' %>
  </div>

  <div class="flex flex-row justify-center text-gray-700 text-center mt-2">
    <%= link_to 'Cancel', dashboard_admins_path, class: 'underline' %>
  </div>
<% end %>
